<section class="bg-custom">
	<h3 class="text-center">My profile</h3> 
	<div class="section-edit">
		<div class="container">
			<div class="row">
				<%= form_for [ @user, @profile] do |f| %>
				<div class="col-lg-12 col-sm-12 ">
					<% if @profile.errors.any? || !@profile.valid? %>
					<div id="error_explanation" class="alert alert-info">
						<p>
							<strong>
								Please fill out the following fields:
							</strong>
						</p>
						<ul>
							<% @profile.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
					<% end %>						
					<div class="row">
						<div class="col-sm-3">
							<ul>
								<li class="btn" id="personal-details">Personal detils</li>
								<li class="btn" id="banking-details">banking</li>
								<li class="btn" id="employment-details">Occupation</li>
								<li class="btn" id="emergency-details">Emergency</li>
							</ul>
						</div>
						<div class="col-sm-6" id="tenant-profile-update">
							<div class="personal-details">
								<p class="lead">
									Personal details
								</p>								
								<div class="input-with-label text-left">
									<label>Date of birth</label>
									<%= f.text_field :DOB, placeholder: 'DOB' %>
								</div>
								<div class="row">
									<div class="col-sm-12">
										<h5>Gender</h5>
										<span class="radio">
											<label for="sex">
												<%= f.radio_button :sex, true%>Male
											</label>
										</span>
										<span class="radio">
											<label for="sex">
												<%= f.radio_button :sex, false%>Female
											</label>
										</span>
									</div>
								</div>
								
								<div id="bio-textarea">
									<label>Short bio</label>
									<%= f.text_field :father_name, maxlength: 140%>
									<p>Characters remaining: <span class='status'></span></p>
								</div> 
								<div>
									<label>Permanent Address</label>
									<%= f.text_field :p_address, placeholder: 'Address line 1' %>
								</div>  
								
								<div class="input-with-label text-left">
									<label>Pin code</label>
									<%= f.text_field :p_pincode, placeholder: 'pincode' %>
								</div> 
								
								
								<!--end select-->				
							</div>	
							<div class="banking-details">		
								<p class="lead">
									banking details
								</p>								
								<div class="input-with-label text-left">
									<label>account holder</label>
									<%= f.text_field :mobile_no, placeholder: 'account holder' %>
								</div>
								<div class="input-with-label text-left">
									<label>account number</label>
									<%= f.text_field :father_mobile_no, placeholder: 'account number' %>
								</div>
								<div class="input-with-label text-left">
									<label>bank name</label>
									<%= f.text_field :branch, placeholder: 'bank name' %>
								</div>
								<div class="input-with-label text-left">
									<label>ifsc code</label>
									<%= f.text_field :session, placeholder: 'ifsc code' %>
								</div>
								
					
							</div>
							
							<div class="employment-details">
									<p class="lead">occupation</p>
									<div class="input-with-label text-left">
										<label>Occupation</label>
										<%= f.text_field :eroll_no, placeholder: 'occupation' %>
									</div>
									
							</div>							
						</div>	
						<div class="col-sm-4 col-sm-offset-4"><input value="Submit Button" type="submit"></div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
		<%#= link_to 'View Profile',   tenant_profile_path(id:profile.id)%>
	</section>		
	



